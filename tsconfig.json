{
    "include": [
        "src"
    ],
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        // "removeComments": true
        "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
        "module": "commonjs",
        "target": "es2019",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
      }
}
